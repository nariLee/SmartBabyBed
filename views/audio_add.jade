html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=Edge')
    title  smart baby bed
    // 웹 폰트 아이콘 사용을 위한 외부 css파일 링크
    script(src='https://use.fontawesome.com/5db4e13ee1.js')
    link(rel='stylesheet', href='css/style.css')

  body
      // 헤더 영역
      header
        a(href='/')
          h1 logo
        ul#gnb
          // 웹 아이콘 배치
          li
            a(href='/member_list')
              i.fa.fa-user
              | Member
          li
            a(href='/video_list')
              i.fa.fa-video-camera
              | Video
          li
            a(href='/audio_list')
              i.fa.fa-volume-up
              | Audio
          li
            a(href='/product_list')
              i.fa.fa-bed
              | Product
        .snsSet
          a(href='#')
            img(src='img/sns1.png', alt='about')
          a(href='#')
            img(src='img/sns2.png', alt='contact')
          a(href='#')
            img(src='img/sns3.png', alt='facebook')
          a(href='#')
            img(src='img/sns4.png', alt='twitter')
          a(href='#')
            img(src='img/sns5.png', alt='etc')
      // 네비게이션 영역
      nav
        p= loginName
        img.welcome(src='img/welcome.png', alt='')
        a.logout(href='/logout')
          img(src='img/logout.png', alt='')
      // aside 영역
      aside
        ul.menu
          h1
            i.fa.fa-volume-up
            |   Audio
          br
          li
            a(href='/audio_list') 오디오 목록 조회
          li
            a(href='/audio_add') 오디오 파일 등록

      // section 영역
      section
        h1 오디오 업로드
        br

        form(action='/audio_add' method='post' enctype='multipart/form-data')
          p
            input(type='text' name='a_title' placeholder='오디오 제목')
          p
            select(name='a_category')
              option(name='null') ---카테고리 선택---
              option(name='whitenoise') 백색소음
              option(name='childsong') 동요
              option(name='classic') 클래식
              option(name='etc') 기타
          p
            input(type='file' name='a_path' placeholder='파일 경로')
          p
            input(type='submit' value='등록')
            button
              a(href='/audio_list') 취소
      // footer 영역
      footer
