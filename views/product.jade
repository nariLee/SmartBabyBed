html
  head
    meta(charset='utf-8')

    title  smart baby bed
    // 웹 폰트 아이콘 사용을 위한 외부 css파일 링크
    script(src='https://use.fontawesome.com/5db4e13ee1.js')
    link(rel='stylesheet', href='css/style.css')

    script.
      function deleteConfirm(){
        var btn = document.getElementsByName("btnRemove");
        var result = confirm("삭제하시겠습니까?");
        if(result == false){
          for(var i=0; i<btn.length;i++){
            btn[i].setAttribute('href', '/product_list');
          }

        }
      }

  body
    div(id='wrapper')
      // 헤더 영역
      header
        a(href='/')
          h1 logo
        ul#gnb
          // 웹 아이콘 배치
          li
            a(href='/member_list')
              i.fa.fa-user
              | Member
          li
            a(href='/video_list')
              i.fa.fa-video-camera
              | Video
          li
            a(href='/audio_list')
              i.fa.fa-volume-up
              | Audio
          li
            a(href='/product_list')
              i.fa.fa-bed
              | Product
        .snsSet
          a(href='#')
            img(src='img/sns1.png', alt='about')
          a(href='#')
            img(src='img/sns2.png', alt='contact')
          a(href='#')
            img(src='img/sns3.png', alt='facebook')
          a(href='#')
            img(src='img/sns4.png', alt='twitter')
          a(href='#')
            img(src='img/sns5.png', alt='etc')
      // 네비게이션 영역
      nav
        p= loginName
        img.welcome(src='img/welcome.png', alt='')
        a.logout(href='/logout')
          img(src='img/logout.png', alt='')
      // aside 영역
      aside
        ul.menu
          h1
            i.fa.fa-bed
            |   Product
          br
          li
            a(href='/product_list') 제품 목록 조회
          li
            a(href='/product_add') 제품 간단 등록
          li
            a(href='/product_add_csv') 제품 엑셀 등록

      // section 영역
      section
        h1 제품정보 목록
        br
        table.item_list(cellspacing='0', border='1', summary='제품 리스트')
          caption 제품 목록
          colgroup
            col
            col
            col
            col
            col
          thead
            tr
              th(scope='col') 제품 시리얼번호
              th(scope='col') 제품명
              th(scope='col') 제조날짜
              th(scope='col') 인증여부
              th(scope='col')
              th(scope='col')
          tbody
            each item in items
              tr
                td= item.serialno
                td= item.name
                td= item.p_date
                td= item.certificate
                td
                  button
                    a(href='/product_edit/'+item.serialno) 수정
                td
                  button
                    a(name='btnRemove', href='/product_list/'+item.serialno, onclick='deleteConfirm()') 삭제


      // footer 영역
      footer
