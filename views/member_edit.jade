html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=Edge')
    title  smart baby bed
    // 웹 폰트 아이콘 사용을 위한 외부 css파일 링크
    script(src='https://use.fontawesome.com/5db4e13ee1.js')
    link(rel='stylesheet', href='css/style.css')


  body
    // 헤더 영역
    header
      a(href='/')
        h1 logo
      ul#gnb
        // 웹 아이콘 배치
        li
          a(href='/member_list')
            i.fa.fa-user
            | Member
        li
          a(href='/video_list')
            i.fa.fa-video-camera
            | Video
        li
          a(href='/audio_list')
            i.fa.fa-volume-up
            | Audio
        li
          a(href='/product_list')
            i.fa.fa-bed
            | Product
      .snsSet
        a(href='#')
          img(src='img/sns1.png', alt='about')
        a(href='#')
          img(src='img/sns2.png', alt='contact')
        a(href='#')
          img(src='img/sns3.png', alt='facebook')
        a(href='#')
          img(src='img/sns4.png', alt='twitter')
        a(href='#')
          img(src='img/sns5.png', alt='etc')
    // 네비게이션 영역
    nav
      p= loginName
      img.welcome(src='img/welcome.png', alt='')
      a.logout(href='/logout')
        img(src='img/logout.png', alt='')
    // aside 영역
    aside
      ul.menu
        h1
          i.fa.fa-user
          |   Member
        br
        li
          a(href='/member_list') 회원 목록 조회
        li
          a(href='/member_add') 회원 목록 추가

    // section 영역
    section
      h1 회원 정보 수정
      br
      form(action='/member_edit/'+item.userid method='post')
        p 아이디
          input(type='hidden' name='userid' placeholder='아이디' value=item.userid)
          = item.userid
        p 시리얼번호
          input(type='text' name='serialno' placeholder='시리얼번호' value=item.serialno)
        p 이름
          input(type='text' name='name' placeholder='이름' value=item.name)
        p 비밀번호
          input(type='password' name='password' placeholder='비밀번호' value=item.password)
        p
          input(type='submit' value='수정')
          button
            a(href='/member_list') 취소

    // footer 영역
    footer
